model Session {
  session_id  String    @id @default(auto()) @map("_id") @db.ObjectId
  id          String    @unique
  // id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Store {
  id           String   @id @map("_id")
  // id           String   @id @default(cuid())
  store        String
  access_token String
  createdAt    DateTime @default(now())
  isActive     Boolean  @default(false)
}

model ProductList {
  id                String   @id @map("_id")
  // id                String   @id @default(cuid())
  store             String
  // store             String   @db.String
  product_image     String?
  title             String
  product_id        String
  variant_title     String?
  variant_id        String?
  inventory_item_id String?
  quantity          Int?
  tracked           Boolean  @default(true)
  isActive          Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Product {
  id            String   @id @map("_id")
  store         String
  product_image String?
  product_id    String
  title         String
  variant_title String
  variant_id    String
  buy           Int      @default(0)
  inventory     Int?
  is_out_stock  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isActive      Boolean  @default(false)
  status        String?
}
